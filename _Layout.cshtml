<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Job Listings</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /* Ensure full-page height and footer at bottom */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
        }

        /* Styling for header */
        .header {
            background-color: #58a7f7 !important; /* Ensures color is applied */
            color: white !important;
            padding: 15px 0;
            text-align: center;
            width: 100%;
        }

        /* Content area grows to push footer down */
        .content {
            flex: 1;
        }

        /* Ensure footer sticks at the bottom */
        .footer {
            background-color: #58a7f7 !important;
            color: white;
            padding: 10px 0;
            text-align: center;
            width: 100%;
        }
    </style>
</head>
<body>

    <!-- Ensure header renders properly -->
    <header class="header">
        <h1>Job Listings</h1>
    </header>

    <div class="container mt-4 content">
        @RenderBody()
    </div>

    <!-- Ensure footer is at the bottom -->
    <footer class="footer mt-auto py-3">
        <div class="container text-center">
            <span>&copy; @DateTime.Now.Year - Job Listings</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
