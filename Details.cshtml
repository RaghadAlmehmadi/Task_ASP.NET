@model MVCApp.Models.JobListing

@{
    ViewData["Title"] = "Job Details";
}

<h2>@Model.Title</h2>
<p><strong>Company:</strong> @Model.CompanyName</p>
<p><strong>Location:</strong> @Model.Location</p>

<!-- Job Type Dropdown (Always Enabled) -->
<label for="jobType">Job Type:</label>
<select id="jobType" class="form-select">
    @foreach (var jobType in Enum.GetValues(typeof(MVCApp.Models.JobType)))
    {
        <option value="@jobType" selected="@(Model.JobType == (MVCApp.Models.JobType)jobType ? "selected" : null)">
            @jobType
        </option>
    }
</select>

<p class="mt-3"><strong>Posted on:</strong> @Model.PostedDate.ToString("MMM dd, yyyy")</p>

<a href="@Url.Action("Index", "Job")" class="btn btn-primary">Back to Listings</a>

